<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="@dimen/_32sdp"
    android:paddingStart="@dimen/_16sdp"
    android:paddingEnd="@dimen/_16sdp">

    <TextView
        android:id="@+id/id_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fugaz_one_font"
        android:gravity="center"
        android:text="date"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent=".32" />

    <TextView
        android:id="@+id/id_wifi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fugaz_one_font"
        android:gravity="center"
        android:text="Ping"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/id_date"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent=".22" />

    <TextView
        android:id="@+id/mobile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fugaz_one_font"
        android:gravity="center"
        android:text="Download"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/id_wifi"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent=".22" />

    <TextView
        android:id="@+id/total"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fugaz_one_font"
        android:gravity="center"
        android:text="Upload"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/mobile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent=".22" />

</androidx.constraintlayout.widget.ConstraintLayout>