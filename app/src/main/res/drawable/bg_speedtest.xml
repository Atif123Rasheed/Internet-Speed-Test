<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android = "http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape = "oval">
            <gradient
                android:angle = "90"
                android:centerColor = "@color/darkbrown"
                android:endColor = "@color/darkbrown"
                android:startColor = "@color/darkbrown"
                android:type = "linear" />
            <size
                android:width = "@dimen/_120sdp"
                android:height = "@dimen/_120sdp" />
        </shape>
    </item>

    <item
        android:bottom = "@dimen/_4sdp"
        android:left = "@dimen/_4sdp"
        android:right = "@dimen/_4sdp"
        android:top = "@dimen/_4sdp">
        <shape android:shape = "oval">
            <solid android:color = "#0E0D0D" />
            <size
                android:width = "@dimen/_150sdp"
                android:height = "@dimen/_150sdp" />
        </shape>
    </item>

</layer-list>