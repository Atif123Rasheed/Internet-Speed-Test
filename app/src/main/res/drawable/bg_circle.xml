<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android = "http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape = "oval">
            <gradient
                android:angle = "90"
                android:endColor = "#AF4A00"
                android:startColor = "#AF4A00"
                android:type = "linear" />

            <size
                android:width = "@dimen/_100sdp"
                android:height = "@dimen/_100sdp"/>
        </shape>
    </item>

    <item
        android:bottom = "@dimen/_4sdp"
        android:left = "@dimen/_4sdp"
        android:right = "@dimen/_4sdp"
        android:top = "@dimen/_4sdp">
        <shape android:shape = "oval">
            <solid android:color = "#373737" />
        </shape>
    </item>

</layer-list>